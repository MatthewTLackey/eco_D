<div class="row">
  <div class="small-6 large-2 columns"><p></p></div>
  <div class="small-6 large-8 columns"><h1>Complete the Survey</h1></div>
  <div class="small-12 large-2 columns"><p></p></div>
</div>


<%= form_for @survey do |f| %>
<div class="row">
  <div class="small-6 large-2 columns"><p></p></div>
  <div class="small-6 large-8 columns">
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :style %>
        <%= f.text_field :style %>
      </div>
    </div>


    <div class="row">
      <div class="large-12 columns">
        <%= f.label :material %>
        <%= f.text_field :material %>
      </div>
    </div>

    
    <div class="row">
      <div class="large-12 columns">
        <div class="large-12 columns">
          <%= f.label :square_feet %>
          <%= f.text_field :square_feet  %>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :height %>
      <%= f.text_field :height  %>
    </div>
  </div>


    <div class="small-12 columns">
      <%= f.label :heat %>
      <%= f.text_field :heat  %>
    </div>

    <div class="row">
    <div class="large-12 columns">
      <%= f.label :heat_bill %>
      <%= f.text_field :heat_bill  %>
    </div>
  </div>
    <div class="row">
    <div class="large-12 columns">
      <%= f.label :electric_bill %>
      <%= f.text_field :electric_bill  %>
    </div>
  </div>
  <%= f.submit "Submit", :class =>"button" %>
  </div>
  <div class="small-12 large-2 columns"><p></p></div>
</div>


<% end %>
